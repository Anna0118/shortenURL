{{#if shortURL}}
  <div class="result">
    <h3>Success! Please use this link:</h3>
    <p id="generatedURL">{{origin}}/{{shortURL}}</p>
  </div>
  <button class="copy" onclick="copy()">Copy</button>
  <a href="/">Back to Home</a>

  <script>
    function copy() { const URL = document.getElementById("generatedURL")
    navigator.clipboard.writeText(URL.innerText) .then(() => alert('copied'))
    .catch(error => console.log(error)) }
  </script>

{{else}}
  <form method="POST" action="/">
    <div class="input-group mb-3">
      <input
        type="url"
        name="url"
        class="form-control"
        placeholder="Input URL here"
        aria-label="Input URL here"
        aria-describedby="basic-addon1"
        required
      />
      <button class="btn btn-success" type="submit">Shorten</button>
    </div>
  </form>
{{/if}}